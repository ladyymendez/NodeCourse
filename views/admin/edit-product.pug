extends  ../layouts/main-layout.pug

block styles
    link(href="/css/product.css", rel="stylesheet")
    link(href="/css/forms.css", rel="stylesheet")

block content 
    main
        form.product-form(action=`/admin/` + (editing ? 'edit' : 'add') + `-product`, method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", value=(editing ? product.title : ''))#title 
            .form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", value=(editing ? product.imageUrl : ''))#imageUrl
            .form-control
                label(for="price") Price
                input(type="text", name="price", step="0.01", value=(editing ? product.price : ''))#price
            .form-control
                label(for="description") Description
                textarea(name="description", cols="30", rows="10")#description #{(editing ? product.description : '')}
            if editing
                input(type="hidden", name="productId" value=product._id)

            button.btn(type="submit") #{(editing ? 'Edit' : 'Add')} Product
