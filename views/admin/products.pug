extends ../layouts/main-layout.pug
block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.produt-item
                        header.card_header
                            h1.product_title #{product.title}
                        div.card_image
                            img(src=product.imageUrl, alt=product.title)
                        div.card_content   
                            h2.product_price #{product.price}
                            p.product_description #{product.description}      
                        .card_actions
                            a(href=`/admin/edit-product/`+product._id+`?edit=true`, title="title").btn Edit
                            form(action=`/admin/delete-product/`+product._id, method="post")
                                input(type="hidden", name="productId" value=product._id)
                                button(type="submit").btn Delete
        else
            h1 No products
