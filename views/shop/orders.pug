extends  ../layouts/main-layout.pug
block styles
    link(href="/css/orders.css", rel="stylesheet")

block content
    main
        if orders.length <= 0
            h1 Nothing there
        else
            ul.orders
                each order in orders
                    li.orders__item
                        h1 #{order._id}
                        ul.orders__products
                            each item in order.items
                                li.orders__products-item #{item.title} #{item.quantity}